<%= render "shared/header" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'registration-main', html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", model: f.object %> 
  <div class="wrapper">
    <div class="form-group">
      <font size="5">アカウント情報</font>
      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :name%>
      </div>    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field">
        <%= f.label :新パスワード %> <i>(変更したい場合)</i><br />
        <%= f.password_field :password, autocomplete: "新しいパスワード" %>
        <% if @minimum_password_length %>
        <br />
        <em>半角英数字６文字以上</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :新パスワード（再入力）%><br />
        <%= f.password_field :password_confirmation %>
      </div>
      <div class="field"> 
        <%= f.label :アカウント画像 %><br />
        <%= f.file_field :image %>
      </div>  
      <div class="field">
        <%= f.label :current_password %><br />
        <i>(変更にはパスワードが必要です)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
      <div class="actions">
        <%= f.submit "変更する", class: :form__btn %>
      </div>
    <% end %>
    <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
</div>
<%= render "shared/footer" %>

