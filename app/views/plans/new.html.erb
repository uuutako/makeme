<h1>新規投稿ぺージ</h1>
    <%= form_with(model: @plan, local: true) do |f| %> 
    <%= render 'shared/error_messages', model: f.object %>
    <div><%= link_to "TOPに戻る", root_path %></div>
      <div>
      画像
      <%= f.file_field :image %>

      <%= f.label :title, "プランの名称" %><br />
        <%= f.text_field :title, placeholder: "タイトル" %>

      <%= f.label :title, "コンセプト" %><br />
        <%= f.text_area  :concept, placeholder: "コンセプト" , rows: "10"%>

      <%= f.label :title, "準備" %><br />
        <%= f.text_field :item, placeholder: "準備する物" %>

      <%= f.label :title, "やり方" %><br />
        <%= f.text_area  :process, placeholder: "やり方", rows: "10" %>

      <%= f.label :title, "費用" %><br />
        <span>¥</span> <%= f.text_field :cost, placeholder: "費用"%>

      <%= f.label :title, "所要時間" %><br />
       <%= f.collection_select(:selecttime_id,Selecttime.all, :id, :name, {prompt:"所用時間を選択してください"}) %>
      
      <%= f.label :title, "場所" %><br />
        <%= f.radio_button :place, "屋内" %>屋内 <%= f.radio_button :place, "屋外" %>屋外

      <%= f.label :title, "時間帯" %><br />
        <%= f.collection_select(:timezone_id, Timezone.all, :id, :name, {prompt: "時間帯を選択してください"}) %>
      
      <%= f.label :title, "季節" %><br />
        <%= f.collection_select(:season_id, Season.all, :id, :name,{prompt: "季節を選択してください"}) %>
      
      <%= f.label :title, "カテゴリー" %><br />
        <%= f.collection_select(:category_id, Category.all, :id, :name,{prompt: "カテゴリーを選択してください"}) %>
      </div>
      
      <%= f.submit "投稿する" %>
<% end %>

