<%= search_form_for(@q, url: plans_search_path) do |f|%> 
    <%= f.text_field :title_or_concept_or_item_cont, placeholder: "キーワードで検索する" %>
    <%= f.label :category_id_eq, "カテゴリー" %>
    <%= f.collection_select :category_id_eq, @categories, :id, :name, :include_blank => '指定なし'%> 
    <%= f.label :season_id_eq, "季節" %>
    <%= f.collection_select :season_id_eq, @seasons, :id, :name, :include_blank => '指定なし' %>
    <%= f.radio_button :place_eq, '', {:checked => true}%>指定しない
    <%= f.radio_button :place_eq, '屋内'%>屋内
    <%= f.radio_button :place_eq, '屋外'%>屋外
    <%= f.text_field :cost_gteq, placeholder: "¥ Min" %>
    <%= f.text_field :cost_lteq, placeholder: "¥ Max" %>    
     <%= f.collection_select :selecttime_id_eq, @selecttimes , :id, :name, :include_blank => '指定なし' %> 
<%= f.submit "検索" %></div>
<% end %> 